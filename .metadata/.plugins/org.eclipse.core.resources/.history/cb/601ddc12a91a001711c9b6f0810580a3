package abd.abd;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.SQLException;
 
public class App {
	
	public static Connection conn;
    public static void main(String[] args) {
 
        // creates three different Connection objects
        conn = null;
 
        try {
            // connect way #1
            String url = "jdbc:mysql://localhost/banco";
            String user = "root";
            String password = "jig30592";
 
            
            
            conn = DriverManager.getConnection(url, user, password);
            if (conn != null) {
                System.out.println("Connected to the database banco");
            }
            
            insertar();
          	
          	conn.close();
          	
        } catch (SQLException ex) {
            System.out.println("An error occurred. Maybe user/password is invalid");
            ex.printStackTrace();
        }
    }
    
    public static void insertar(){
    	
    	String query = " insert into cuenta (nCuenta, nombre, apellidos, saldo)"
                + " values (?, ?, ?, ?)";
    	
    	for(int i = 0; i<100; i++){
    	try{
	    	PreparedStatement preparedStmt = conn.prepareStatement(query);
	        preparedStmt.setString (1, "12345678901234567"+Integer.toString(i));
	        preparedStmt.setString (2, "Jesus");
	      	preparedStmt.setString (3, "Iniguez");
	      	preparedStmt.setDouble (4, 0);
	      	
	      	preparedStmt.execute();
    	}
    	}catch (SQLException ex) {
            System.out.println("An error occurred. Maybe user/password is invalid");
            ex.printStackTrace();
        }
    }

}
