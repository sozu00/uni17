import java.util.regex.*;

/*
 * Esta clase obtiene un String de texto y lo limpia.
 * 
 * Sus métodos serán:
 * 
 * Limpiador(String t)
 * Constructor que recibe un String que será un texto a limpiar
 * 
 * void Limpiar() 
 * Limpia el texto
 * 
 * String texto() 
 * Devuelve el texto, ya sea limpio o no. 
 * 
 * 
 */


public class Limpiador {
	
	public Limpiador(String t){
		texto = t;
	}
	
	public void Limpiar(){
		Pattern pat = Pattern.compile(todo);
	    String [] num = pat.split(texto);
	    String resultado = "";
	    for(String x : num)  resultado = resultado.concat(x);
	    texto = resultado;
	}
	
	Pattern patron = Pattern.compile("abc.*");
    //Matcher mat = pat.matcher(texto);
	private String Puntuacion = "\\p{Punct}";
	private String todo = "[^-\\w]";
	private String texto;
		
	
	
}
